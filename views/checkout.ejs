                </ol>
            </nav>
        </div>
    </section>
    <!-- page head section end -->

    <!--  account section starts -->
    <section class="account-section section-b-space pt-0">
        <div class="container">
            <div class="layout-sec">
                <div class="row g-lg-4 g-4">
                    <div class="col-lg-8">
                        <div class="process-section">
                            <ul class="process-list">
                                <li class="active">
                                    <a href="checkout">
                                        <div class="process-icon">
                                            <img class="img-fluid icon" src="assets/images/svg/user.svg" alt="user">
                                        </div>
                                        <h6>Account</h6>
                                    </a>
                                </li>
                                <li>
                                    <a href="address">
                                        <div class="process-icon">
                                            <img class="img-fluid icon" src="assets/images/svg/location.svg"
                                                alt="location">
                                        </div>
                                        <h6>Address</h6>
                                    </a>
                                </li>
                                <li>
                                    <a href="payment">
                                        <div class="process-icon">
                                            <img class="img-fluid icon" src="assets/images/svg/wallet-add.svg"
                                                alt="wallet-add">
                                        </div>
                                        <h6>Payment</h6>
                                    </a>
                                </li>
                                <li>
                                    <a href="confirm-order">
                                        <div class="process-icon">
                                            <img class="img-fluid icon" src="assets/images/svg/verify.svg" alt="verify">
                                        </div>
                                        <h6>Confirm</h6>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="account-part">
                            <p>
                                Hello <%=user.name%> 
                                
                            </p>

                            <img class="img-fluid account-img" src="assets/images/account.svg" alt="account">
                            <div class="title mb-0">
                                <div class="loader-line"></div>
                            <a href="address" class="btn theme-btn restaurant-btn w-10 rounded-1">Add Address</a>
                               
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 product-details-content">
                        <div class="order-summery-section sticky-top">
                            <div class="checkout-detail">
                                <h3 class="fw-semibold dark-text checkout-title">
                                    Cart Items
                                </h3>
                                <div class="order-summery-section mt-0">
                                    <div class="checkout-detail p-0">
                                        <% let subtotal = 0; %>
                                        <% cartItems.forEach((item) => { %>
                                            <% subtotal += item.product.foodPrice * item.quantity; %>
                                            <ul>
                                                <li>
                                                    <div class="horizontal-product-box">
                                                        <div class="product-content">
                                                            <div class="d-flex align-items-center justify-content-between">
                                                                <h5><%= item.product.foodName %></h5>
                                                                <h6 class="product-price">$<%= (item.product.foodPrice * item.quantity).toFixed(2) %></h6>
                                                            </div>
                                                            <div class="d-flex align-items-center justify-content-between mt-md-2 mt-1 gap-1">
                                                                <div class="plus-minus">
                                                                    <form method="post" action="/asscending">
                                                                        <input type="hidden" name="productId" value="<%=item.product._id%>" >
                                                                       <button style="border:none"><i class="ri-subtract-line sub"></i></button> 
                                                                    </form>
                                                                    <input type="number" value="<%=item.quantity%>" min="1" max="10">
                                                                    <form method="post" action="/descending">
                                                                        
                                                                        <input type="hidden" name="productId" value="<%=item.product._id%>" >
                                                                       <button  style="border:none"><i class="ri-add-line add"></i></button> 
                                                                    </form>&nbsp;&nbsp;&nbsp;&nbsp;
                                                                    <form method="post" action="/delete">
                                                                        <input type="hidden" name="productId" value="<%=item.product._id%>">
                                                                        <button style="border:none"><i class="ri-delete-bin-line remove"></i></button> 
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                            </ul>
                                        <% }) %>
                                        <% let deliveryCharge = 20; %> <!-- Example delivery charge -->
                                        <% let total = subtotal + deliveryCharge; %>
                    
                                        <h5 class="bill-details-title fw-semibold dark-text">
                                            Bill Details
                                        </h5>
                                        <div class="sub-total">
                                            <h6 class="content-color fw-normal">Sub Total</h6>
                                            <h6 class="fw-semibold">$<%= subtotal.toFixed(2) %></h6>
                                        </div>
                                        <div class="sub-total">
                                            <h6 class="content-color fw-normal">Delivery Charge (2 kms)</h6>
                                            <h6 class="fw-semibold success-color">$<%= deliveryCharge.toFixed(2) %></h6>
                                        </div>
                                        <div class="grand-total">
                                            <h6 class="fw-semibold dark-text">To Pay</h6>
                                            <h6 class="fw-semibold amount">$<%= total.toFixed(2) %></h6>
                                        </div>
                                    </div>
                                </div>
                                <a href="/address" class="btn theme-btn restaurant-btn w-100 rounded-2">Proceed to payment</a>
                                <img class="dots-design" src="/assets/images/svg/dots-design.svg" alt="dots">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- account section end -->

