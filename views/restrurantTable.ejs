<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+z5G7L3tvWu9z9CgciFfsR/1/S9PbNJw5dI1foJ" crossorigin="anonymous">
    <style>
        /* Custom CSS */
        body {
            background-color: #f8f9fa;
        }

        .container {
            padding-top: 50px;
        }

        .table-container {
            margin-top: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            /* border-radius: 10px; */
            overflow: hidden;
        }

        .table {
            min-width: 100%;
            overflow-x: auto;
        }

        th, td {
            vertical-align: middle !important;
        }

        .table img {
            max-width: 50px;
            height: auto;
            border-radius: 5px;
        }

        .btn {
            padding: .375rem .75rem;
            font-size: 0.875rem;
            line-height: 1.5;
            border-radius: .25rem;
        }

        .btn-edit {
            background-color: #007bff;
            color: #fff;
        }

        .btn-delete {
            background-color: #dc3545;
            color: #fff;
        }

        .admin-table thead {
            background-color: #343a40;
            color: #fff;
        }

        .admin-table th, .admin-table td {
            padding: 12px;
            text-align: center;
        }

        .admin-table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

       

        .admin-table img {
            max-width: 50px;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4">Restaurant Data</h1>
        <a href="/restrurantAdmin" >Add New Data</a>
        <a href="/deliveryBoyDetails">DeliveryBoy Data</a>
        <div class="table-container">
            <table class="table admin-table table-striped table-hover">
                <thead>
                    <tr>
                        
                        <th>Categories</th>
                        <th>Food Name</th>
                        <th>Food Image</th>
                        <th>Food Price</th>
                        <th>Food Description</th>
                        <th>Food Type</th>
                        <th>Availability</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% restrurants.forEach(function(restaurant) { %>
                        <tr>
                           
                            <td><%= restaurant.categories.join(', ') %></td>
                            <td><%= restaurant.foodName %></td>
                            <td><img src="<%= restaurant.foodImage %>" alt="Food Image"></td>
                            <td><%= restaurant.foodPrice %></td>
                            <td><%= restaurant.foodDescription %></td>
                            <td><%= restaurant.foodType %></td>
                            <td><%= restaurant.avelType %></td>
                            <td><a href="/Edit/<%= restaurant._id %>" class="btn btn-edit">Edit</a></td>
                            <td><a href="/delete/<%= restaurant._id %>" class="btn btn-delete">Delete</a></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
